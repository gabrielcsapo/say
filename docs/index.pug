        script.
            $(window).ready(function() {
                $("#encode").codeblock({
                    editable: true,
                    consoleText: "Output from the example appears here",
                    consoleClass: "codeblock-console-text",
                    runButtonText: "run",
                    runButtonClass: "codeblock-console-run",
                    console: true,
                    resetable: true,
                    runnable: true,
                    lineNumbers: true,
                    editorTheme: "ace/theme/monokai"
                });
                $("#decode").codeblock({
                    editable: true,
                    consoleText: "Output from the example appears here",
                    consoleClass: "codeblock-console-text",
                    runButtonText: "run",
                    runButtonClass: "codeblock-console-run",
                    console: true,
                    resetable: true,
                    runnable: true,
                    lineNumbers: true,
                    editorTheme: "ace/theme/monokai"
                })
                $("#complex").codeblock({
                    editable: true,
                    consoleText: "Output from the example appears here",
                    consoleClass: "codeblock-console-text",
                    runButtonText: "run",
                    runButtonClass: "codeblock-console-run",
                    console: true,
                    resetable: true,
                    runnable: true,
                    lineNumbers: true,
                    editorTheme: "ace/theme/monokai"
                });
            });
            $("#subtext").typed({
                strings: ["When words aren't enough"],
                typeSpeed: 100,
                onStringTyped: function() {
                    document.querySelector('#subtext').innerHTML = require('saywhat').encode(document.querySelector('#subtext').innerHTML);
                }
            });
