doctype html
html
    head
        meta(charset="utf-8")
        title saywhat
        script(src="../dist/saywhat.js")
        style.
            div.codeblock-editor-wrapper {
                height: 275.00000000000003px !important;
            }
            html, body {
                margin: 0;
                padding: 0;
                font-family: Arial, Helvetica, sans-serif;
                width: 100%;
                height: 100%;
            }
            .typed-cursor{
                display: none;
            }
            @keyframes blink{
                0% { opacity:1; }
                50% { opacity:0; }
                100% { opacity:1; }
            }
            @-webkit-keyframes blink{
                0% { opacity:1; }
                50% { opacity:0; }
                100% { opacity:1; }
            }
            @-moz-keyframes blink{
                0% { opacity:1; }
                50% { opacity:0; }
                100% { opacity:1; }
            }
        style
            include ../node_modules/psychic-ui/dist/psychic-min.css
        script
            include ../node_modules/jquery/dist/jquery.js
        script
            include ../node_modules/typed.js/dist/typed.min.js
        script
            include ../node_modules/ace-builds/src/ace.js
        style
            include ./codeblock.css
        script
            include ./codeblock.js
